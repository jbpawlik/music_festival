<h2>Artist: <%= @artist.artist_name %></h2>
<h3>Genre: <%= @artist.genre %></h3>
<h3>Stage: <%= @artist.stage_id %></h3>

<form action="/stages/<%= @artist.stage_id %>/artist/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename artist</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update artist</button>
</form>

<form action="/stages/<%= @artist.stage_id %>/artist/<%= @artist.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete artist</button>
</form>

<a href="/stages/<%= @artist.stage_id %>">Back to <%= @artist.album.name %></a>